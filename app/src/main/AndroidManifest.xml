        android:label="@string/app_name"
        android:roundIcon="@drawable/image_logo"
        android:supportsRtl="true"
        tools:targetApi="31"
        android:theme="@style/Theme.YourApp">

        <activity
            android:name=".tela_login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <activity
            android:name=".LojaActivity"
            android:exported="true" />

        <activity
            android:name=".CarrinhoActivity"
            android:exported="true" />

        <activity
            android:name=".FreteActivity"
            android:exported="true" />

        <activity
            android:name=".PagamentoActivity"
            android:exported="true" />

        <activity
            android:name=".StatusPedidoActivity"
            android:exported="true" />
    </application>

</manifest>
